<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:defaultValue="false"
        android:key="switch_preference_1"
        android:title="Daily Notifications"/>

    <ListPreference
        android:entries="@array/sorting_method_names"
        android:entryValues="@array/sorting_method_values"
        android:defaultValue="State Name"
        android:key="list_preference_1"
        android:title="Sort by"/>

    <androidx.preference.ListPreference
        android:defaultValue="auto"
        android:dialogTitle="Set Night Mode"
        android:entries="@array/night_mode"
        android:entryValues="@array/night_mode_value"
        android:key="key_night_mode"
        android:summary="Select a dark or light theme"
        android:title="Night Mode"/>

</PreferenceScreen>